<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <ItemGroup>
	  <PackageReference Include="Google.Protobuf" Version="3.18.0" />
	  <PackageReference Include="Grpc.AspNetCore" Version="2.40.0" />
	  <PackageReference Include="Grpc.AspNetCore.Server" Version="2.40.0" />
	  <PackageReference Include="Grpc.Net.ClientFactory" Version="2.40.0" />
	  <PackageReference Include="Grpc.Tools" Version="2.40.0">
	    <PrivateAssets>all</PrivateAssets>
	    <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
	  </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Cargo.Application\Cargo.Application.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Protobuf Include="..\..\..\..\Core\Core.Protos\Protos\stateupdate.proto" GrpcServices="Both">
      <Link>Protos\stateupdate.proto</Link>
    </Protobuf>
  </ItemGroup>

</Project>
